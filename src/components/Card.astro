---
interface Props {
	post: any;
}

const { post } = Astro.props;
---

<div
	class="block h-auto w-full max-w-xs overflow-hidden rounded-lg bg-stone-200/50 p-4 shadow-md transition hover:bg-gradient-to-r hover:shadow-lg dark:bg-gray-900"
>
	<div
		class="flex flex-col justify-between rounded-lg bg-stone-300 p-4 text-gray-900 dark:bg-stone-800 dark:text-white"
	>
		<p class="mb-1 text-sm font-semibold">{post.frontmatter.title}</p>
		<p class="mb-2 text-xs text-gray-600 dark:text-gray-400">{post.frontmatter.author}</p>
		<a
			href={post.frontmatter.link}
			class="text-xs font-semibold text-orange-600 underline transition-colors hover:text-orange-400"
			target="_blank"
			rel="noopener noreferrer"
		>
			Click here
		</a>
	</div>
</div>
